@model IEnumerable<WebApplication2.FOURNISSEUR>

@{
    ViewBag.Title = "Index";
}

<h2>Categorie</h2>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="container">
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FournisseurID }) |
                @Html.ActionLink("Details", "Details", new { id = item.FournisseurID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FournisseurID })
            </td>
        </tr>
    }

</table>
</div>